<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <TextView
        android:id="@+id/fbMemberGameStatsNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="member name"
        android:textSize="@dimen/_20sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fbMemberGameStatsGoalsBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/fbMemberGameStatsGoalsET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/fbMemberGameStatsGoalsBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assists:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fbMemberGameStatsAssistsBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/fbMemberGameStatsAssistsET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/fbMemberGameStatsAssistsBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saves:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fbMemberGameStatsSavesBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/fbMemberGameStatsSavesET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/fbMemberGameStatsSavesBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fouls:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fbMemberGameStatsFoulsBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/fbMemberGameStatsFoulsET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/fbMemberGameStatsFoulsBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/fbMemberGameStatsSaveStatsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"/>

</LinearLayout>