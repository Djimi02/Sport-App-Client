<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <TextView
        android:id="@+id/bbMemberGameStatsNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="member name"
        android:textSize="@dimen/_20sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bbMemberGameStatsPointsBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/bbMemberGameStatsPointsET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/bbMemberGameStatsPointsBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#3-points:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bbMemberGameStatsNumOfThreePointsBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/bbMemberGameStatsNumOfThreePointsET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/bbMemberGameStatsNumOfThreePointsBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dunks:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bbMemberGameStatsDunksBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/bbMemberGameStatsDunksET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/bbMemberGameStatsDunksBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blocks:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bbMemberGameStatsBlocksBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/bbMemberGameStatsBlocksET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/bbMemberGameStatsBlocksBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fouls:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bbMemberGameStatsFoulsBTN1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="-"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

            <EditText
                android:id="@+id/bbMemberGameStatsFoulsET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:ems="1"
                android:inputType="number" />

            <Button
                android:id="@+id/bbMemberGameStatsFoulsBTN2"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="+"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bbMemberGameStatsSaveStatsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"/>

</LinearLayout>